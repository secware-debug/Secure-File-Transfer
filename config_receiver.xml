<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <receiver_settings>
        <setting logFile="log_receiver.txt"/>
        <setting logFormat="%(levelname)s:&#x9;%(message)s"/>
        <setting logMode="w"/>
        <setting logLevel="10"/>
        <setting port="2020"/>

        <setting AESFile="./keys/aes_key.xml"/>

        <setting signatureSize="256"/>
        <setting hashFile="./receiver_received/results/message.dd"/>
        <setting hashEncoding="base16"/>

        <setting receiveDirectory="./receiver_received/"/>
        <setting resultsDirectory="./receiver_received/results"/>
        <setting decryptedFilePrefix="decrypt_"/>
    </receiver_settings>>
</configuration>